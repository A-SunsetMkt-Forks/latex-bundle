{% block bobv_latex_longtable_element %}

  % Table element
  {% include 'BobVLatexBundle::extra_commands.twig.twig' %}

  \begin{longtable}{ {%- for row in rows %}{{ row }} {% endfor -%} }

    {% if caption != null %}
      \caption{ {{- caption|latex_escape|raw -}} }
    {% endif %}

    {# First head #}
    {% if firsthead != null %}
      {{ firsthead|raw }}
      \endfirsthead
    {% endif %}

    {# Head #}
    {% if head != null %}
      {{ head|raw }}
      \endhead
    {% endif %}

    {# Foot #}
    {% if foot != null %}
      {{ foot|raw }}
      \endfoot
    {% endif %}

    {# Last foot #}
    {% if lastfoot %}
      {{ lastfoot|raw }}
      \endlastfoot
    {% endif %}

    {% for rowData in data %}
      {% if rowData['newRule'] == false %}
        {{ rowData['data'] }}
      {% else %}
        {% set first = true %}
        {% for cellData in rowData['data'] %}
          {% if not first %}&{% endif %}
          {{ cellData|latex_escape|raw }}
          {% set first = false %}
        {% endfor %}
        \\
      {% endif %}
    {% endfor %}

  \end{longtable}

{% endblock bobv_latex_longtable_element %}
